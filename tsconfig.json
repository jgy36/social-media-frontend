{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "bundler"
  },
  "include": [
    "App.tsx",
    "src/**/*.ts",
    "src/**/*.tsx",
    "global.css",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app/**/*" // Temporarily exclude the app directory if you're using React Navigation
  ]
}
